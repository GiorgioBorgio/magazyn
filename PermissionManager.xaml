<UserControl x:Class="Magazyn.PermissionManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Magazyn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" x:Key="RoundedNavButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,0,10,10"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Górny pasek -->
        <Border Background="#FF1E293B" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="👥 Zarządzanie uprawnieniami"
                           FontSize="18"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="23,0,0,0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button Content="Nadaj uprawnienia"
                            Margin="0,10,10,10"
                            Padding="12,4"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#FF3B82F6"
                            Foreground="White"
                            Cursor="Hand"
                            Click="NadajUprawnienia_Click"
                            BorderThickness="0"/>

                    <Button Content="⟵ Powrót"
                            Margin="0,10,0,10"
                            Padding="12,4"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="White"
                            Foreground="Black"
                            Cursor="Hand"
                            Click="BackButton_Click"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Uprawnienia -->
        <StackPanel Grid.Row="1" Margin="0,20,20,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Rejestrowanie towarów: " FontSize="14" FontWeight="Bold" Width="250" VerticalAlignment="Center"/>
                <Button Content="Lista" Style="{StaticResource RoundedNavButton}" Width="82" Background="#FFF56B1B" Foreground="White" HorizontalAlignment="Right" Margin="20,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Wyszukiwanie towarów i przegląd stanów magazynowych:" FontSize="14" FontWeight="Bold" Width="350" VerticalAlignment="Center"/>
                <Button Content="Lista" Style="{StaticResource RoundedNavButton}" Width="82" Background="#FFF56B1B" Foreground="White" Click="Button_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Margin="20,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Przegląd historii uzupełniania stanów magazynowych:" FontSize="14" FontWeight="Bold" Width="350" VerticalAlignment="Center"/>
                <Button Content="Lista" Style="{StaticResource RoundedNavButton}" Width="82" Background="#FFF56B1B" Foreground="White" HorizontalAlignment="Right" Margin="20,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Podgląd wyszukanej rejestracji towaru:" FontSize="14" FontWeight="Bold" Width="250" VerticalAlignment="Center"/>
                <Button Content="Lista" Style="{StaticResource RoundedNavButton}" Width="82" Background="#FFF56B1B" Foreground="White" HorizontalAlignment="Right" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>


        <!-- Tabela użytkowników -->
        <DataGrid x:Name="UserDataGrid"
                  Grid.Row="2"
                  Margin="20"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="False"
                  RowHeight="60"
                  RowHeaderWidth="0"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  AlternatingRowBackground="White"
                  RowBackground="White"
                  ColumnHeaderHeight="40"
                  EnableRowVirtualization="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Background="Transparent"
                  FontSize="16"
                  FontWeight="Bold"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}" Width="200" />
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}" Width="200" />
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="200" />
                <DataGridTextColumn Header="" Binding="{Binding Login}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
