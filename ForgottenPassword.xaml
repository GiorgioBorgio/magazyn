<Window x:Class="Magazyn.ForgottenPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmiana hasła" Height="300" Width="734">

    <Window.Resources>
        <!-- Style skopiowane z Login_window.xaml -->
        <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ccc"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4CAF50"/>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="126"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Label Content="ID" FontSize="16" FontWeight="Bold" Margin="136,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="27" />
        <TextBox x:Name="IDTextBox" IsReadOnly="False" Margin="198,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="389" Height="40" />

        <Label Content="Email" FontSize="16" FontWeight="Bold" Margin="136,4,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Height="31" Width="51" />
        <TextBox x:Name="EmailTextbox" Margin="198,6,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="389" Grid.Row="2" Height="40" />

        <Button Content="Wyślij nowe hasło" Style="{StaticResource LoginButtonStyle}" Margin="198,58,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Submit_Click" Width="389" Grid.Row="2" Height="45" Grid.RowSpan="2"/>


    </Grid>
</Window>
