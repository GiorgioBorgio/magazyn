<Window x:Class="Magazyn.ForgottenPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmiana hasła" Height="215" Width="542"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style skopiowane z Login_window.xaml -->
        <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ccc"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#10B981"/>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="310"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Etykieta Email po lewej -->
        <Label Content="Email:" 
               FontSize="16" 
               FontWeight="Bold" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Right"
               Margin="0,0,10,0" />

        <!-- Pole tekstowe obok etykiety -->
        <TextBox x:Name="EmailTextbox" 
                 Grid.Column="1" 
                 Width="310" 
                 Height="40" 
                 VerticalAlignment="Center" />

        <!-- Przycisk poniżej pola tekstowego -->
        <Button Content="Wyślij nowe hasło" 
                Grid.Row="1" 
                Grid.Column="1"
                Style="{StaticResource LoginButtonStyle}" 
                HorizontalAlignment="Center"
                Margin="0,30,0,-15"
                Click="Submit_Click" />
    </Grid>
</Window>
