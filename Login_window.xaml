<Window x:Class="Magazyn.Login_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazyn"
        mc:Ignorable="d"
        Title="Logowanie" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ccc"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4CAF50"/>

        <!-- styl dla textboxów -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <!-- styl dla przycisku logowania-->
        <Style x:Key="LoginButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="126"/>
        </Style>

        <!-- styl dla przycisku odzyskiwania-->
        <Style x:Key="TransparentTextButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <SolidColorBrush Color="Black" Opacity="0.75"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground">
                        <Setter.Value>
                            <SolidColorBrush Color="Black" Opacity="1.0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="481,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="40" Cursor="IBeam"/>
        <TextBox HorizontalAlignment="Left" Margin="481,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="40" Cursor="IBeam"/>
        <Label Content="Login" Grid.Row="0" Grid.Column="0" Margin="381,101,319,0" FontSize="16" FontWeight="Bold" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.868,0.517"/>
        <Label Content="Hasło" Grid.Row="0" Grid.Column="0" Margin="381,155,319,0" FontSize="16" FontWeight="Bold" VerticalAlignment="Top" Height="40"/>
        <Button x:Name="Button_logowanie_ok"
                Content="Zaloguj" 
                HorizontalAlignment="Left" 
                Margin="546,269,0,0" 
                VerticalAlignment="Top" 
                Style="{StaticResource LoginButtonStyle}" 
                Cursor=""/>

        <Button x:Name="Button_pass_recovery" 
                Content="Nie pamiętasz hasła?" 
                HorizontalAlignment="Left" 
                Margin="524,387,0,0" 
                VerticalAlignment="Top" 
                Width="170"
                Cursor="Hand"
                Style="{StaticResource TransparentTextButtonStyle}">
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="434" Stroke="Black" VerticalAlignment="Center" Width="376">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF1E293B" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Warehouse" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" FontSize="48" FontFamily="Dubai" FontStyle="Italic"/>
        <Label Content="Manager" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" FontSize="48" FontFamily="Dubai" FontStyle="Italic"/>


    </Grid>
</Window>
