<Window x:Class="Magazyn.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmiana hasła" Height="200" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login:" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="LoginTextBox" IsReadOnly="True" Margin="0,5,0,10" />

        <TextBlock Grid.Row="2" Text="Nowe hasło:" FontWeight="Bold" />
        <PasswordBox Grid.Row="3" x:Name="NewPasswordBox" Margin="0,5,0,10" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zatwierdź" Click="Submit_Click" Width="100" Margin="0,10,10,0" />
            <Button Content="Anuluj" Click="Cancel_Click" Width="100" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>