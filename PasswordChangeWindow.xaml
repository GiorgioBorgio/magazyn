<Window x:Class="Magazyn.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmiana hasła" Height="300" Width="760"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style skopiowane z Login_window.xaml -->
        <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ccc"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4CAF50"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="126"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,191,0">
        <Label Content="Login" FontSize="16" FontWeight="Bold" Margin="42,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTextBox" IsReadOnly="True" Margin="152,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="389" />
        <Label Content="Nowe hasło" FontSize="16" FontWeight="Bold" Margin="42,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <PasswordBox x:Name="NewPasswordBox" Margin="152,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="389" />
        <Button Content="Zatwierdź" Style="{StaticResource LoginButtonStyle}" Margin="152,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Submit_Click" Width="175"/>
        <Button Content="Anuluj" Style="{StaticResource LoginButtonStyle}" Margin="343,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Cancel_Click" Width="198"/>
    </Grid>
</Window>