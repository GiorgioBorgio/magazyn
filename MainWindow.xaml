<Window x:Class="Magazyn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Magazyn"
        Title="Ekran główny"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedNavButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,0,10,10"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Lewy pasek -->
        <DockPanel Width="200" Background="#1E293B" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Stretch">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="20,20,10,20">
                    <TextBlock Text="🏠" FontSize="20" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="Magazyn" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>

                <!-- Przycisk: Zarządzanie użytkownikami -->
                <Button Content="Zarządzanie użytkownikami"
                        Style="{StaticResource RoundedNavButton}"
                        Click="OpenUsersManager"/>
            </StackPanel>
        </DockPanel>

        <!-- Obszar główny -->
        <ContentControl x:Name="MainContentArea" Margin="200,0,0,0"/>
    </Grid>
</Window>
