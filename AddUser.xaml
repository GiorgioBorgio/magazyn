<Window x:Class="Magazyn.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj użytkownika" Height="800" Width="520" ResizeMode="NoResize"
        Background="#f2f2f2">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#333333"/>
        <SolidColorBrush x:Key="TextBoxBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ccc"/>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Margin" Value="10,10,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Width" Value="250"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10,20,10,10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <Label Content="Login"/>
            <TextBox x:Name="Textbox_login"/>

            <Label Content="Imię"/>
            <TextBox x:Name="Textbox_imie"/>

            <Label Content="Nazwisko"/>
            <TextBox x:Name="Textbox_nazwisko"/>

            <Label Content="Miejscowość"/>
            <TextBox x:Name="Textbox_miejscowość"/>

            <Label Content="Kod pocztowy"/>
            <TextBox x:Name="Textbox_kod_pocztowy"/>

            <Label Content="Ulica"/>
            <TextBox x:Name="Textbox_ulica"/>

            <Label Content="Numer posesji"/>
            <TextBox x:Name="Textbox_numer_posesji"/>

            <Label Content="Numer lokalu (opcjonalne)"/>
            <TextBox x:Name="Textbox_numer_lokalu"/>

            <Label Content="Pesel"/>
            <TextBox x:Name="Textbox_pesel"/>

            <Label Content="Data urodzenia"/>
            <DatePicker x:Name="Date_picker_data_urodzenia" Width="250" Margin="10,5">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="FontSize" Value="22"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

            <Label Content="Płeć"/>
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <RadioButton x:Name="Radio_btn_kobieta" Content="Kobieta"/>
                <RadioButton x:Name="Radio_btn_mężczyzna" Content="Mężczyzna"/>
            </StackPanel>

            <Label Content="Mail"/>
            <TextBox x:Name="Textbox_mail"/>

            <Label Content="Numer telefonu"/>
            <TextBox x:Name="Textbox_numer_telefonu"/>

            <Button Content="Dodaj" HorizontalAlignment="Center" Click="Button_Dodaj_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
