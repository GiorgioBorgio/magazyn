<Window x:Class="Magazyn.PermissionListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista uprawnień"
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F1F5F9"
        FontFamily="Segoe UI" FontSize="14">

    <Border CornerRadius="10" Padding="20" Background="White" BorderBrush="#CBD5E1" BorderThickness="1">
        <DockPanel>
            <!-- Tytuł -->
            <TextBlock Text="📋 Lista dostępnych uprawnień"
                       DockPanel.Dock="Top"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#1E293B"
                       Margin="0,0,0,20"/>

            <!-- Przycisk zamknięcia -->
            <Button Content="Zamknij"
                    Width="100"
                    Height="35"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    DockPanel.Dock="Bottom"
                    Background="#CBD5E1"
                    Foreground="#1E293B"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Click="Close_Click"/>

            <!-- Lista uprawnień -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PermissionList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E2E8F0"
                                    CornerRadius="6"
                                    Margin="4"
                                    Padding="10">
                                <TextBlock Text="{Binding}" Foreground="#1E293B" FontSize="14"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>